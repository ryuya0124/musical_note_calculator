# ============================================================
# Fastfile - iOS App Store Connect デプロイ自動化
# ============================================================

default_platform(:ios)

platform :ios do
  # ============================================================
  # 事前処理: 証明書とプロビジョニングプロファイルを取得
  # ============================================================
  desc "証明書とプロビジョニングプロファイルを同期"
  lane :sync_certificates do
    # Git認証情報を含むURL（CI環境のみ）
    git_url = if ENV['MATCH_GIT_BASIC_AUTHORIZATION']
      auth = Base64.decode64(ENV['MATCH_GIT_BASIC_AUTHORIZATION'])
      "https://#{auth}@github.com/ryuya0124/Apple_Certificates"
    else
      "https://github.com/ryuya0124/Apple_Certificates"
    end

    match(
      git_url: git_url,
      type: "appstore",
      readonly: is_ci
    )
  end

  # ============================================================
  # 署名ありIPAビルド（アップロードなし）
  # ============================================================
  desc "署名ありIPAをビルド"
  lane :build_signed do
    # 証明書を同期
    sync_certificates

    # ビルド番号を自動インクリメント
    increment_build_number(
      xcodeproj: "Runner.xcodeproj"
    )

    # IPAをビルド
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "../build/ios/ipa",
      output_name: "musical_note_calculator.ipa"
    )

    UI.success("署名ありIPAビルド完了: build/ios/ipa/musical_note_calculator.ipa")
  end

  # ============================================================
  # TestFlightへのアップロード（ビルド済みIPAを使用）
  # ============================================================
  desc "ビルド済みIPAをTestFlightにアップロード"
  lane :upload_to_testflight do
    # App Store Connect API認証設定
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: Base64.decode64(ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]),
      is_key_content_base64: false
    )

    # TestFlightにアップロード
    upload_to_testflight(
      api_key: api_key,
      ipa: "../build/ios/ipa/musical_note_calculator.ipa",
      skip_waiting_for_build_processing: true
    )

    UI.success("TestFlightへのアップロード完了")
  end

  # ============================================================
  # TestFlightへのビルド+アップロード（従来のbetaレーン）
  # ============================================================
  desc "TestFlightにビルドをアップロード"
  lane :beta do
    build_signed
    upload_to_testflight
  end

  # ============================================================
  # App Store Connectへのアップロード（リリース用）
  # ============================================================
  desc "App Store Connectにビルドをアップロード"
  lane :release do
    beta
  end
end
